
<view>
  <scroll-view scroll-y="true" style="height: {{height}}px; width:{{width}}px">
    <view class="flex">
      <image bindtap="a" class="box distance border" src="{{teenager}}"/>
    </view>
    <view class="age ago">
      <text>20岁以前</text>
      <view class="bottom word">2017-10-19 16:35:20</view>
    </view>
    <view class="flex">
      <image bindtap="b" class="box distance border" src="{{youth}}"/>
    </view>
    <view class="age ago">
      <text>20岁以后40岁以前</text>
      <view class="bottom word">2017-10-19 17:33:20</view>
    </view>  
    <view class="flex">  
      <image bindtap="c" class="box distance border" src="{{adult}}"/>
    </view>
    <view class="age ago">
      <text>40岁以后</text>
      <view class="bottom word">2017-10-19 17:36:20</view>
    </view> 
  </scroll-view>
</view>