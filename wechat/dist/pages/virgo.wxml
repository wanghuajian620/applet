
<view>
  <scroll-view scroll-y="true" style="height: {{height}}px; width:{{width}}px; background-color: #f4f5f7">
    <view class="center">
      <view bindtap="tree"  wx:for="{{essay}}" wx:key="index" data-index="{{index}}" class="card">
        <view class="photocenter">
          <image class="distance border" src="{{item.image}}" style="margin-top: 0.7rem"/>
        </view>
        <view class="flextext">
          <text class="word">{{item.title}}</text>
          <view class="date">{{item.created}}</view>
        </view> 
      </view>
    </view>
  </scroll-view>
</view>