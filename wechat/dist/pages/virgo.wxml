
<view>
  <scroll-view scroll-y="true" style="height: {{height}}px; width:{{width}}px; background-color: #f4f5f7">
    <view class="flex">
      <view bindtap="tree" class="card"  wx:for="{{essay}}" wx:key="index" data-index="{{index}}">
        <view class="flex-photo">
          <image class="photo-border" src="{{item.image}}" style="margin-top: 0.7rem"/>
        </view>
        <view class="flex-text">
          <text class="word">{{item.title}}</text>
          <view class="date">{{item.created}}</view>
        </view> 
      </view>
    </view>
  </scroll-view>
</view>