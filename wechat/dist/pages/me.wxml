
  <view class="photo">
    <view class="flex box">
      <image class="circle" src="{{avatarUrl}}"/>
    </view>
    <view class="flex1 box">
      <image bindtap="github" class="github" src="{{cat}}"/>
      <text style="color: {{color1}}">My Github</text>
    </view>
    <view class="flex1 box">
      <image bindtap="email" class="github" src="{{email}}"/>
      <text style="color: {{color2}}">My Email</text>
    </view>
    <view>
      <text bindtap="onShareAppMessage"/>
    </view>  
  </view>