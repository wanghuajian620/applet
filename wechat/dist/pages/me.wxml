
  <view>
    <view class="background">
      <view class="top"/>
      <view class="flex box">
        <image bindtap="click" class="circle" src="{{avatarUrl}}"/>
        <text class="word">{{nickName}}</text>
      </view>
      <view bindtap="github" class="techcat distancecat">
        <view class="backgroundcat techcat border">
          <image class="icon distance" src="{{cat}}"/>
          <text class="word">My Github</text>
          <image class="icon space" src="{{symbol}}"/>
        </view>
      </view>
      <view class="line"/>
      <view bindtap="email" class="techcat distanceemail">
        <view class="backgroundcat techcat border">
          <image class="icon distance" src="{{email}}"/>
          <text class="word">My Email</text>
          <image class="icon interval" src="{{sign}}"/>
        </view>
      </view>
      <view>
        <text bindtap="onShareAppMessage"/>
      </view>  
    </view>
  </view>