
  <view>
    <view class="line">
    </view>
    <view class="flextext word">
      <view  wx:for="{{tab}}" wx:key="index" bindtap="tap" id="{{index}}">
        <text style="color: {{index == currentTargetId ? 'red' : 'black'}}; border-bottom: 1px solid {{index == currentTargetId ? 'red' : 'black'}}">{{item}}</text>
      </view>
      </view>
    <view bindtap="click" class="flex-brief"  wx:for="{{content}}" wx:key="index" data-index="{{index}}">
      <view wx:if="{{item.type === tab[currentTargetId]}}" class="box">{{item.title}}</view>
    </view>
    <view>
      <text bindtap="onShareAppMessage"/>
      <text bindtap="onPullDownRefresh"/>
      <text bindtap="startPullDownRefresh"/>
    </view>
  </view>