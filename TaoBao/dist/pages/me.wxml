
<view class="background">
  <view class="top"/>
  <view class="flex">
    <image class="circle" src="{{avatarUrl}}"/>
    <text class="word">{{nickName}}</text>
  </view>
  <view class="center">
    <view class="indent paycenter">
      <image class="margin box" src="{{order}}"/>
      <text class="margin word">我的订单</text>
      <image class="payorder box" src="{{brand}}"/>
    </view>
    <view class="distance">
      <view class="pay paycenter"  wx:for="{{b}}" wx:key="index" id="{{index}}">
        <image class="margin box" src="{{item.icon}}"/>
        <view class="laotong">
          <text class="margin word">{{item.text}}</text>
        </view>  
        <image class="passpay box" src="{{item.check}}"/>
      </view>  
    </view>
  </view>  
</view>