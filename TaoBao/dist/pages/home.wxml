      </view>
      <view class="column">
        <image class="circle" src="{{supermarket}}"/>
        <text class="word">天猫超市</text>
      </view>
    </view>
    <view class="row">
      <view class="column">
        <image class="circle" src="{{pay}}"/>
        <text class="word">充值中心</text>
      </view>
      <view class="column">
        <image class="circle" src="{{travel}}"/>
